{
    "name": "reinvanoyen/hector",
    "type": "library",
    "description": "Simple PHP MVC framework",
    "authors": [
      {
        "name": "Rein Van Oyen",
        "email": "reinvanoyen@gmail.com",
        "role": "Developer"
      }
    ],
    "minimum-stability": "dev",
    "require": {
      "php": "^7.0",
        "reinvanoyen/aegis": "dev-master",
        "psr/http-message": "^1.0",
        "psr/log": "^1.0@dev"
    },
    "require-dev": {
      "phpunit/phpunit": "5.0.*",
      "friendsofphp/php-cs-fixer": "^2.13@dev"
    },
    "autoload": {
      "psr-4": {
        "Hector\\": "src/Hector"
      },
      "files": [
        "src/Hector/Helpers/Http.php",
        "src/Hector/Helpers/Regex.php",
        "src/Hector/Helpers/String.php",
        "src/Hector/Helpers/Type.php"
      ]
    }
}
